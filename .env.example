# ===========================================
# Ouroboros â€” Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Required variables are marked with [REQUIRED].
# Optional variables have sensible defaults.

# --- Required secrets ---

# [REQUIRED] OpenRouter API key for LLM calls
# Get one at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# [REQUIRED] Telegram Bot token
# Create a bot via @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# [REQUIRED] Spending limit in USD (e.g. 50)
TOTAL_BUDGET=50

# [REQUIRED] GitHub personal access token with `repo` scope
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=

# [REQUIRED] Your GitHub username
GITHUB_USER=

# [REQUIRED] Your forked repository name
GITHUB_REPO=ouroboros

# --- Optional secrets ---

# Enables the web_search tool (OpenAI Responses API)
# Get at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Enables Claude Code CLI for code editing
# Get at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# --- Model configuration ---

# Primary LLM model (via OpenRouter)
OUROBOROS_MODEL=anthropic/claude-sonnet-4.6

# Model for code editing tasks
OUROBOROS_MODEL_CODE=anthropic/claude-sonnet-4.6

# Model for lightweight tasks (consciousness, compaction)
OUROBOROS_MODEL_LIGHT=google/gemini-3-pro-preview

# Model for web search (OpenAI Responses API)
OUROBOROS_WEBSEARCH_MODEL=gpt-5

# Fallback model chain (comma-separated, first != active is used)
OUROBOROS_MODEL_FALLBACK_LIST=anthropic/claude-sonnet-4.6,google/gemini-3-pro-preview,openai/gpt-4.1

# --- Runtime configuration ---

# Maximum parallel worker processes
OUROBOROS_MAX_WORKERS=5

# Maximum LLM rounds per task
OUROBOROS_MAX_ROUNDS=200

# % of budget for background consciousness
OUROBOROS_BG_BUDGET_PCT=10

# Soft/hard timeout for tasks (seconds)
OUROBOROS_SOFT_TIMEOUT_SEC=600
OUROBOROS_HARD_TIMEOUT_SEC=1800

# Diagnostics
OUROBOROS_DIAG_HEARTBEAT_SEC=30
OUROBOROS_DIAG_SLOW_CYCLE_SEC=20
